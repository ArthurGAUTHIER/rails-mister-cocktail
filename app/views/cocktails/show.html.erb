<div class="container vertical-flexbox">
  <h1></h1>
  <div class="lateral-flexbox">
    <%= link_to "Back to list", cocktails_path, class: "btn btn-primary"%>
    <%= link_to "Add an Alchemist receipe", new_cocktail_dose_path(@cocktail), class: "btn btn-primary"%>
  </div>
  <div class="fiche">
    <%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>
    <h2><%= @cocktail.name %></h2>
    <ul>
      <% @cocktail.doses.each do |dose| %>
        <li><%= dose.description %> <%= dose.ingredient.name %></li>
      <% end %>
    </ul>
  </div>
</div>



